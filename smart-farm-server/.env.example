PORT=4000
MONGO_URI=mongodb://localhost:27017/smartfarm
JWT_ACCESS_SECRET=replace-with-strong-secret
JWT_REFRESH_SECRET=replace-with-strong-refresh-secret
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d
	# Allow frontend origins (comma-separated). Example for Vite dev servers:
	CORS_ORIGIN=http://localhost:5173,http://localhost:5174

	# Development convenience: allow relaxed email validation (accepts short TLDs like user@c.c)
	RELAXED_EMAIL=true
MQTT_URL=mqtt://192.168.1.1:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID_PREFIX=smartfarm-srv
MQTT_QOS=1

# Automation defaults (optional)
AUTO_PROVISION_OWNER_ID=
# Minimum seconds between actuator state changes to prevent rapid toggling
MIN_TOGGLE_INTERVAL_SEC=10
